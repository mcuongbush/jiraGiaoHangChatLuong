@model GiaoHangTietKiem.Models.DangKy
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<form class="login100-form validate-form" method="post" action="/Login/Register">
    <span class="login100-form-title p-b-43">
        Đăng Ký Tài Khoản
    </span>
    @Html.AntiForgeryToken()
    @if (TempData["AlretMessage"] != null)
    {
        <div id="AlertBox" class="alert @TempData["AlretType"] hide">
            @TempData["AlretMessage"]
        </div>
    }
    <div class="wrap-input100 validate-input" data-validate="Họ tên là bắt buộc">
        <input class="input100" type="text" name="TenKH1">
        <span class="focus-input100"></span>
        <span class="label-input100">Họ Tên</span>
    </div>
    <div class="wrap-input100 validate-input" data-validate="Số điện thoại là bắt buộc">
        <input class="input100" type="text" name="SDT1">
        <span class="focus-input100"></span>
        <span class="label-input100">Số Điện Thoại</span>
    </div>
    <div class="wrap-input100 validate-input" data-validate="Tên tài khoản là bắt buộc">
        <input class="input100" type="text" name="UserName1">
        <span class="focus-input100"></span>
        <span class="label-input100">Tên tài khoản</span>
    </div>
    <div class="gender">
        <span>Giới Tính:</span>
        <input checked="checked" name="GioiTinh1" type="radio" value="Nam" />Nam
        <input name="GioiTinh1" type="radio" value="Nữ" />Nữ
    </div>
    <div class="wrap-input100 validate-input">
        <input class="input100" type="text" name="DiaChi1" />
        <span class="focus-input100"></span>
        <span class="label-input100">Địa Chỉ</span>
    </div>
    <div class="wrap-input100 validate-input" data-validate="Nhập sai định dạng Email: ex@abc.xyz">
        <input class="input100" type="text" name="Email1" />
        <span class="focus-input100"></span>
        <span class="label-input100">Email</span>
    </div>
    <div class="wrap-input100 validate-input" data-validate="Mật khẩu là bắt buộc">
        <input class="input100" type="password" name="MatKhau1" />
        <span class="focus-input100"></span>
        <span class="label-input100">Mật Khẩu</span>
    </div>
    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            Đăng Ký
        </button>
    </div>
    <div class="container-login100-form-btn">
        <button class="register100-form-btn" type="button" onclick="location.href='@Url.Action("Login","Login")'">
            Đăng Nhập
        </button>
    </div>
    <div class="content">
        <ul>
            <li>
                Phủ sóng 99% huyện xã
                <span>
                    Lấy hàng / Giao hàng trên 11.000 huyện xa trên toàn quốc
                </span>
            </li>
            <li>
                Giao nhanh không kịp hủy
                <span>Giao nội tỉnh 6-12h</span>
                <span>Giao nội miền 24-36h</span>
                <span>Giao liên miền 48h</span>
            </li>
            <li>
                Giao hàng linh hoạt
                <span>
                    Linh hoạt giao hàng cho khách chọn, đổi địa chỉ giao, đổi tiền CoD, đổi SĐT, đổi người nhận hàng,…
                </span>
            </li>
            <li>
                Miễn phí thu hộ tiền
            </li>
        </ul>
    </div>

</form>


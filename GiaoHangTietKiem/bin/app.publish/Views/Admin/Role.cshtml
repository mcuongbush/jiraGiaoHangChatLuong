@model GiaoHangTietKiem.Views.Admin.Models.List_Role
@using GiaoHangTietKiem.Views.Admin.Models
@{
    ViewBag.Title = "Role";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <h5 class="card-header">Danh sách quyền</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Check</th>
                    <th>Tên quyền</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model.RoleList)
                {
                    <tr>
                        <td>
                            @{
                                if (!item.Status)
                                {
                                    <button type="button" class="btn btn-danger" Onclick="location.href='@Url.Action("SaveRole","Admin",new { @IDRole = item.IDRole,@TenTk = item.TenTk})'">
                                        Không
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("SaveRole","Admin",new { @IDRole = item.IDRole,@TenTk = item.TenTk})'">
                                        Có
                                    </button>
                                }
                            }
                        </td>
                        <td>@item.RoleName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalLong" onclick="location.href='@Url.Action("UserManage","Admin")'">
        Quay lại
    </button>
</div>





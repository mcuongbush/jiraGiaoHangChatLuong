﻿@model IEnumerable<GiaoHangTietKiem.Models.PhongBan>

@{ ViewBag.Title = "IndexDepartment";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<h2 class="header-elements">DANH SÁCH PHÒNG BAN</h2>

<p class="textDesign">
    @Html.ActionLink("Thêm mới", "CreateDepartment")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenPB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhiemVu)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TenPB)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NhiemVu)
    </td>
    <td>
        @Html.ActionLink("Sửa", "EditDepartment", new { id = item.MaPB.Replace(" ", "") }) |
        @Html.ActionLink("Chi tiết", "DetailsDepartment", new { id = item.MaPB.Replace(" ", "") }) |
        @Html.ActionLink("Xoá", "DeleteDepartment", new { id = item.MaPB.Replace(" ", "") })
    </td>
</tr>}

</table>

<style>
    .header-elements {
        margin: 20px;
    }

    .textDesign {
        margin-left: 20px;
    }
</style>
﻿@model IEnumerable<GiaoHangTietKiem.Models.NhaKho>

@{ ViewBag.Title = "IndexStoreHouse";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<h2 class="header-elements">DANH SÁCH NHÀ KHO</h2>

<p class="textDesign">
    @Html.ActionLink("Thêm mới", "CreateStoreHouse")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienTich)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SucChua)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaKV)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TenNK)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DienTich)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SucChua)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiaChi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaKV)
    </td>
    <td>
        @Html.ActionLink("Sửa", "EditStoreHouse", new { id = item.MaNK.Replace(" ", "") }) |
        @Html.ActionLink("Chi tiết", "DetailsStoreHouse", new { id = item.MaNK.Replace(" ", "") }) |
        @Html.ActionLink("Xoá", "DeleteStoreHouse", new { id = item.MaNK.Replace(" ", "") })
    </td>
</tr>}

</table>

<style>
    .header-elements {
        margin: 20px;
    }

    .textDesign {
        margin-left: 20px;
    }
</style>
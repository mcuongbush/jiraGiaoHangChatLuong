﻿@model GiaoHangTietKiem.Models.KhachHang

@{ ViewBag.Title = "CreateCustomer";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<h2 class="header-elements">THÊM THÔNG TIN KHÁCH HÀNG</h2>
<style>
    .header-elements {
        margin: 20px;
    }
</style>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <strong>Họ tên:</strong>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <strong>Số điện thoại:</strong>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <strong>Địa chỉ:</strong>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <strong>Giới tính:</strong>
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.GioiTinh)
                                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                                <style>
                                    .form-horizontal {
                                        margin-left: 20px;
                                    }
                                </style>}

<div class="actionDesign">
    @Html.ActionLink("Trở lại", "IndexCustomer", "Admin")
</div>
<style>
    .actionDesign {
        margin-left: 20px;
    }
</style>